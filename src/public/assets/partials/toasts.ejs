<link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var notyf = new Notyf({
            duration: 7000,
            ripple: false,
            dismissible: true
        });
        document.success = function(str) {
            document.dismissAll();
            notyf.success(str)
        }
        document.error = function(str) {
            document.dismissAll();
            notyf.error(str)
        }
        document.dismissAll = function(str) {
            notyf.dismissAll()
        }
    });
</script>